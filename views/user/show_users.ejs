<%-include('../partials/header', {page_title:"All Users"})-%>
<%-include('../partials/navbar', {posts:blog} )-%>

<div class="row">
<% Object.keys(users).forEach(function(key, i){ %>
	<div class="col-md-4">
	<h3><a href="/user/<%= key %>"> <%= users[key].id %></a></h3>

	<form action="/user/<%= key %>/edit" method="GET">
	  <button>Update User</button>
	</form>

	<form action="/user/<%= key %>?_method=DELETE" method="POST">
	  <button>Delete User</button>
	</form>
	</div>
    <%if ((i+1)%3==0 && i!=0){ %>
       </div> <!-- end the row div-->
           <div class="row">
        <% } %>

	<% }) %>
    </div> <!--last row -->
    <br>
<h2> Want to create a new user?</h2>
<form action="/user/create" method="GET">
	<button>Add User</button>
</form>

<%-include('../partials/footer')-%>
