  <br> <br>
  <div class="row">
    <h2 class="posts"> Blog Posts! </h2>
  </div>
  <div class="row">
    <% data.forEach(function(post){%>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src=<%=post.image%> style="width:300px;height:350px;" alt="Card image cap">
        <% let filename = post.title.replace(/ /g, "_"); %>
        <div class="card-body">
          <h5 class="card-title"><%=post.title%></h5>
          <p class="card-text"><%=post.descrip%></p>
          <a href="<%=filename%>.html" class="btn btn-primary">Post</a>
        </div>
      </div>
    </div>
    <%})%>
