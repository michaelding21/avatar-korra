<%-include('../partials/header')-%>
<%-include('../partials/navbar')-%>

<div class="row">
<% Object.keys(quiz).forEach(function(key, i){ %>
	<div class="col-md-4">
	<h3><a href="/quiz/<%= key %>"> <%= quiz[key].id %></a></h3>

	<form action="/quiz/<%= key %>/edit" method="GET">
	  <button>Update Quiz</button>
	</form>

	<form action="/quiz/<%= key %>?_method=DELETE" method="POST">
	  <button>Delete Quiz</button>
	</form>
	</div>
    <%if ((i+1)%3==0 && i!=0){ %>
       </div> <!-- end the row div-->
           <div class="row">
        <% } %>

	<% }) %>
    </div> <!--last row -->
    <br>
<h2> Want to create a new quiz?</h2>
<form action="/quiz/create" method="GET">
	<button>Create Quiz</button>
</form>

<%-include('../partials/footer')-%>
