<%-include('../partials/header')-%>
<%-include('../partials/navbar')-%>

<div class="row">
<% Object.keys(blog).forEach(function(key, i){ %>
	<div class="col-md-4">
	<h3><a href="/blog/<%= key %>"> <%= blog[key].id %></a></h3>

	<form action="/blog/<%= key %>/edit" method="GET">
	  <button>Update Blog</button>
	</form>

	<form action="/blog/<%= key %>?_method=DELETE" method="POST">
	  <button>Delete Blog</button>
	</form>
	</div>
    <%if ((i+1)%3==0 && i!=0){ %>
       </div> <!-- end the row div-->
           <div class="row">
        <% } %>

	<% }) %>
    </div> <!--last row -->
    <br>
<h2> Want to add a new blog?</h2>
<form action="/blog/create" method="GET">
	<button>Add Blog</button>
</form>

<%-include('../partials/footer')-%>
